{
    "name": "HDI",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "php",
    "workspaceFolder": "/var/www/html",
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "onecentlin.laravel-blade",
                "EditorConfig.EditorConfig",
                "esbenp.prettier-vscode",
                "redhat.vscode-yaml",
                "xdebug.php-debug"
            ],
            "settings": {
                "php.validate.executablePath": "/usr/local/bin/php"
            }
        }
    },
    "forwardPorts": [
        8000,
        5432
    ],
    "remoteUser": "vscode"
}